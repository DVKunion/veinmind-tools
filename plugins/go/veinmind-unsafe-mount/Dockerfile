FROM veinmind/go1.18:1.5.3-stretch as builder
WORKDIR /build
COPY .. .
RUN make build

FROM alpine:3.9 as  upx
WORKDIR /build
COPY --from=builder /build/veinmind-unsafe-mount .
RUN sed -i 's/dl-cdn.alpinelinux.org/mirrors.aliyun.com/g' /etc/apk/repositories && apk add upx && upx -9 veinmind-unsafe-mount

FROM veinmind/base:1.5.3-slim as release
WORKDIR /tool
COPY --from=builder /build/veinmind-unsafe-mount .
RUN echo "#!/bin/bash\n\n./veinmind-unsafe-mount \$*" > /tool/entrypoint.sh && chmod +x /tool/entrypoint.sh && chmod +x /tool/veinmind-unsafe-mount
ENTRYPOINT ["/tool/entrypoint.sh"]
